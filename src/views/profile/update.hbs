<h3 class="text-center mb-4" style="margin-top: 20px;">Thông tin tài khoản</h3>  

<form action="/profile/update" method="post" class="profile-container">
    <div class="mb-3 row align-items-center">
        <h6 class="col-sm-2 mb-0">
            <label for="email" class="col-form-label">Email: </label>
        </h6>
        <div class="col-sm-10">
            <input type="email" class="form-control" id="email" name="email" value="{{user.email}}" disabled>
        </div>
    </div>
    <div class="mb-3 row align-items-center">
        <h6 class="col-sm-2 mb-0">
            <label for="name" class="col-form-label">Họ tên: </label>
        </h6>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="name" name="name" value="{{user.name}}" >
        </div>
    </div>
    <div class="mb-3 row align-items-center">
        <h6 class="col-sm-2 mb-0">
            <label for="phone" class="col-form-label">Số điện thoại: </label>
        </h6>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="phone" name="phone" value="{{user.phone}}" >
        </div>
    </div>
    <div class="mb-3 row align-items-center">
        <h6 class="col-sm-2 mb-0">
            <label for="address" class="col-form-label">Địa chỉ: </label>
        </h6>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="address" name="address" value="{{user.address}}" >
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        <a href="/profile" class="btn btn-secondary">Hủy</a>
    </div>
</form>

<style>
    .profile-container {
        margin: 20px auto;
        width: 50%;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #feffef;
    }
    .profile-container .form-control {
        background-color: #fff;
    }
</style>
