<h3 class="text-center mb-4" style="margin-top: 20px;">Đổi mật khẩu</h3>  

<form action="/profile/change-password" class="profile-container" method="post">
    <div class="mb-3 row align-items-center">
        <h6 class="col-sm-2 mb-0">
            <label for="oldpass" class="col-form-label">Mật khẩu cũ: </label>
        </h6>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="oldpass" name="oldpass" required>
        </div>
    </div>   
    <div class="mb-3 row align-items-center">
        <h6 class="col-sm-2 mb-0">
            <label for="newpass" class="col-form-label">Mật khẩu mới: </label>
        </h6>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="newpass" name="newpass" required>
        </div>
    </div>
    <div class="mb-3 row align-items-center">
        <h6 class="col-sm-2 mb-0">
            <label for="renewpass" class="col-form-label">Nhập lại mật khẩu mới: </label>
        </h6>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="renewpass" name="renewpass" required>
        </div>
    </div>

    {{#if error}}
    <div class="alert alert-danger text-center">
        {{#if (eq error "1")}}
            Mật khẩu cũ không đúng
        {{else if (eq error "2")}}
            Mật khẩu nhập lại không khớp
        {{else if (eq error "3")}}
            Đổi mật khẩu thất bại
        {{/if}}
    </div>
    {{/if}}
    
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        <a href="/profile" class="btn btn-secondary">Hủy</a>
    </div>
</form>

<style>
    .profile-container {
        margin: 20px auto;
        width: 50%;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #feffef;
    }
    .profile-container .form-control {
        background-color: #fff;
    }
</style>
